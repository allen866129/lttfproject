<%= content_for :head do %>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
  <%= javascript_include_tag 'jquery.preimage' %>
  <%= javascript_include_tag 'image_upload' %>
 
<% end %>
<% set_meta_tags :site => '桌球愛好者聯盟',:title=>'桌球愛好者聯盟積分賽系統註冊網頁',:description => '桌球愛好者聯盟積分賽系統',
    :og => { :title =>'桌球愛好者聯盟積分賽系統註冊網頁'  , :image => 'http://twlttf.org/lttfgroupphoto.jpg', :description =>'歡迎球友註冊桌盟積分賽會員', :url=> 'http://www.twlttf.org'} %>
 <link rel="canonical" href= 'http://www.twlttf.org' />    
<p align=center><%= link_to '返回前頁', :back %></p>
<div class="row">
  <div class="col-xs-12 col-md-12 col-lg-12">
    <div style="margin-top:50px;" class="mainbox col-xs-8 col-xs-offset-2">
      <div class="panel panel-info">
        <div class="panel-heading">
          <div class="panel-title">
            <i class="fa fa-users"></i>&nbsp;桌盟會員註冊
          </div>
        </div>
        <div style="padding-top:30px" class="panel-body" >
          <% resource.build_playerprofile %>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html =>{:class =>"form-horizontal form-inline",:role =>"form" } ) do |f| %>
            <div style="display:none" class="alert alert-danger">
              <p><%= devise_error_messages! %></p>
              <span></span>
            </div>
            <div class="form-group">
              <div class="col-xs-12 col-md-12 col-lg-12">
                <%= f.label "會員姓名", :class => "form-label" %>:
                <%= f.text_field :username, :required => true, :autofocus => true, :class => "form-control", :size => "50",:placeholder =>"請務必使用中文真實全名，若非使用真實全名，此帳號將會被刪除!" %>
              </div>
            </div>
            <div class="col-xs-12 col-md-12 col-lg-12"></br></div>
            <div class="form-group">
              <div class="col-xs-12 col-md-12 col-lg-12">
                <%= f.label "Email", :class => "form-label" %>:
                <%= f.email_field :email, :required => true, :autofocus => true, :class => "form-control", :size => "50", :placeholder => "請勿使用hinet.net 結尾的信箱來註冊"  %>
              </div>
            </div>
            <div class="col-xs-12 col-md-12 col-lg-12"></br></div>
            <div class="form-group">
              <div class="col-xs-12 col-md-12 col-lg-12">
                <%= f.label "FB帳號", :class => "form-label" %>:
                <%= f.text_field :fbaccount, :class =>"form-control",:size => "50",:placeholder =>"FB帳號(例如:李昆展, Seven Wu),請不要填入FB註冊email或網址或email小老鼠符號前的文字)" %>
              </div>
            </div>
            <div class="col-xs-12 col-md-12 col-lg-12"></br></div>
            <div class="form-group">
              <div class="col-xs-12 col-md-12 col-lg-12">
                <%= f.label "電話", :class => "form-label" %>:
                <%= f.text_field :phone, :required => true, :class =>"form-control",:size => "50",:placeholder =>"必須填寫,僅提供積分賽主辦人連絡用!" %>
              </div>
            </div>
            <div class="col-xs-12 col-md-12 col-lg-12"></br></div>
            <div class="form-group">
              <div class="col-xs-12 col-md-12 col-lg-12">
                <%= f.label "密碼", :class => "form-label" %>:
                <%= f.password_field :password, autocomplete: "off", :required => true, :class =>"form-control", :size => "50",
                 :placeholder =>"請輸入四位數以上之密碼"%>
              </div>
            </div>
            <div class="col-xs-12 col-md-12 col-lg-12"></br></div>
            <div class="form-group">
              <div class="col-xs-12 col-md-12 col-lg-12">
                <%= f.label "確認密碼", :class => "form-label" %>:
                <%= f.password_field :password_confirmation, autocomplete: "off", :class =>"form-control", :size => "50" %>
              </div>
            </div>
            <div class="col-xs-12 col-md-12 col-lg-12"></br></div>
            <%= f.fields_for :playerprofile do |profile_form| %>
              <div class="form-group">
                <div class="col-xs-12 col-md-12 col-lg-12">
                  <%= profile_form.label "初始積分",  :class => "form-label" %>:
                  <%= profile_form.number_field :initscore,:required => true, :min=> 0, :class =>"form-control", :size => "50"  %>
                </div>
              </div>
              <div class="col-xs-12 col-md-12 col-lg-12"></br></div>
              <div class="form-group">
                <div class="col-xs-12 col-md-12 col-lg-12">
                  <%= profile_form.label "性別", :class => "form-label-standard" %>:
                  <%= profile_form.select :bio, [ '男' , '女'], :class => "form-control" %>
                </div>
              </div>
              <div class="col-xs-12 col-md-12 col-lg-12"></br></div>
              <div class="form-group">
                <div class="col-xs-12 col-md-12 col-lg-12">
                  <%= profile_form.label "持拍方式", :class => "form-label-standard" %>:
                  <%= profile_form.select :paddleholdtype, ['右手日直','右手橫拍','右手中直','右手陰陽拍','左手日直','左手橫拍','左手中直','左手陰陽拍'], :class => "form-control"  %>
                </div>
              </div>
              <div class="col-xs-12 col-md-12 col-lg-12"></br></div>
              <div class="form-group">
                <div class="col-xs-12 col-md-12 col-lg-12">
                  <%= profile_form.label "球拍型號", :class => "form-label" %>:
                  <%= profile_form.text_field :paddlemodel, :class =>"form-control", :size => "50" %>
                </div>
              </div>
              <div class="col-xs-12 col-md-12 col-lg-12"></br></div>
              <div class="form-group">
                <div class="col-xs-12 col-md-12 col-lg-12">
                  <%= profile_form.label "正手膠皮",:class => "form-label" %>:
                  <%= profile_form.text_field :forwardrubber, :class =>"form-control", :size => "50" %>
                </div>
              </div>
              <div class="col-xs-12 col-md-12 col-lg-12"></br></div>
              <div class="form-group">
                <div class="col-xs-12 col-md-12 col-lg-12">
                  <%= profile_form.label "反手膠皮", :class => "form-label" %>:
                  <%= profile_form.text_field :backrubber, :class =>"form-control", :size => "50" %>
                </div>
              </div>
              <div class="col-xs-12 col-md-12 col-lg-12"></br></div>
              <div class="form-group">
                <div class="col-xs-12 col-md-12 col-lg-12">
                  <%= f.label "會員照片上傳 : (請使用600x400或300x200比例)" %>
                  <%= f.file_field :playerphoto, :class => "file", :id => "member_photo" ,:onchange => "readURL(this)" %>
                </div>
              </div>
              <div class="col-xs-12 col-md-12 col-lg-12"></br></div>
              <div class="form-group">
                <div class="col-xs-12 col-md-12 col-lg-12">
                  照片預覽 :<br>
                   <img id="img_preview" src="" alt="照片預覽" style="width:300px;height:200px;overflow: auto;" />
                </div>
              </div>
            <% end %>
            <div class="col-xs-12 col-md-12 col-lg-12"></br></div>
            <div class="col-md-offset-4 col-md-5">
              <%= f.submit "註冊", :class => "btn btn-block btn-info", :id => "btn-signup" do%>
                <i class="icon-hand-right"></i>
              <% end %>
            </div>
            <div class="col-md-3"></div>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<p align=center><%= link_to '返回前頁', :back %></p>
<a href="#" id="startmodal" class="btn btn-lg btn-info" data-toggle="modal" data-target="#myModal" style="display: none">#</a>

